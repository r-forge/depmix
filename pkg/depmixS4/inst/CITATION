citHeader("To cite package depmixS4 in publications, use the following:")

citEntry(entry="Article",
	title = "{depmixS4}: An R-package for Hidden Markov Models",
	author = personList(person(first="Ingmar", last="Visser"), 
		person(first="Maarten", last="Speekenbrink")),
	journal = "Journal of Statistical Software",
	year = "2010",
	url = "http://cran.r-project.org",
	textVersion = paste("Ingmar Visser & Maarten Speekenbrink (2010). 
	depmixS4: An R-package for Hidden Markov Models") 
)
